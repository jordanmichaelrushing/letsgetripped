<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @meal.name %>
</p>

<% if @meal.notes.present? %>
  <p>
    <strong>Notes:</strong>
    <%= @meal.notes %>
  </p>
<% end %>

<p>
  <strong>Calories:</strong>
  <%= (@meal.fats * 9) + (@meal.carbs * 4) + (@meal.protein * 4) %>
</p>

<p>
  <strong>Meal number:</strong>
  <%= @meal.meal_number %>
</p>

<p>
  <strong>Fats:</strong>
  <%= @meal.fats %>
</p>

<p>
  <strong>Saturated fats:</strong>
  <%= @meal.saturated_fats %>
</p>

<p>
  <strong>Cholesterol:</strong>
  <%= @meal.cholesterol %>
</p>

<p>
  <strong>Sodium:</strong>
  <%= @meal.sodium %>
</p>

<p>
  <strong>Carbs:</strong>
  <%= @meal.carbs %>
</p>

<p>
  <strong>Fiber:</strong>
  <%= @meal.fiber %>
</p>

<p>
  <strong>Sugar:</strong>
  <%= @meal.sugar %>
</p>

<p>
  <strong>Protein:</strong>
  <%= @meal.protein %>
</p>

<%= link_to 'Edit', edit_meal_path(@meal, day: @day_id) %> |
<%= link_to 'Home', root_path %>