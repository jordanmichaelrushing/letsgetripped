<h1><%= current_user.name %>'s Getting Ripped!</h1>

<br>
<%= link_to 'Create New Day', new_day_path %>
<br>
<br>

<div class="col-xs-6">
  <table>
    <thead>
      <tr>
        <th>Day</th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @days.each do |day| %>
        <tr>
          <td><%= link_to day.date.strftime("%b %d, %Y"), day %></td>
          <td>&nbsp; | &nbsp;</td>
          <td><%= link_to 'Edit', edit_day_path(day) %></td>
          <td>&nbsp; | &nbsp;</td>
          <td><%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>  
<div class="col-xs-6">
  <table>
    <thead>
      <tr>
        <th>Analysis:</th>
        <th colspan="3"></th>
        <th colspan="3"></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% if @stats %>
        <% @stats.each do |f| %>
          <tr>
            <td>
              <%= f %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td>
            No Stats Yet
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
