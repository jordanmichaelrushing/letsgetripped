<%= form_for(@day) do |f| %>
  <% if @day.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@day.errors.count, "error") %> prohibited this day from being saved:</h2>

      <ul>
      <% @day.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br>
    <% if @day.date %>
      <%= f.text_field :date, placeholder: Date.today.strftime("%Y-%m-%d") %>
    <% else %>
      <%= f.text_field :date, placeholder: Date.today.strftime("%Y-%m-%d"), value: Date.today.strftime("%Y-%m-%d") %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label "Video Url of daily vlog (Not neccessary)" %><br>
    <%= f.text_field :video_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
